@page
@model Disable2faModel
@{
    ViewData["Title"] = "Desativar autenticação de dois fatores (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="container mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <partial name="_StatusMessage" for="StatusMessage" />

            <div class="text-center mb-4">
                <i class="bi bi-shield-lock-fill text-danger" style="font-size: 2.5rem;"></i>
                <h3 class="mt-3">@ViewData["Title"]</h3>
            </div>

            <div class="alert alert-warning" role="alert">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Esta ação apenas desativa a autenticação 2FA.</strong>
                </div>
                <p class="mb-0">
                    Desativar a autenticação 2FA não altera as chaves utilizadas nas aplicações de autenticação.
                    Se pretender alterar a chave utilizada numa aplicação de autenticação, deve
                    <a asp-page="./ResetAuthenticator" class="alert-link">redefinir as suas chaves de autenticação</a>.
                </p>
            </div>

            <div class="mt-4">
                <form method="post" class="text-center">
                    <button class="btn btn-danger btn-lg" type="submit">
                        <i class="bi bi-shield-x me-2"></i>
                        Desativar Autenticação 2FA
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
