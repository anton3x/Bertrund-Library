@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<!-- Centraliza a página usando Flexbox -->
<style>
    .reset-password-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .reset-password-container {
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
    }

    .form-floating {
        position: relative;
    }

    .reset-password-title {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #343a40; /* cor de título */
    }

    .reset-password-container a {
        color: #007bff;
    }

    .reset-password-container a:hover {
        text-decoration: underline;
    }

    .additional-links {
        text-align: center;
        margin-top: 20px;
    }
</style>

<div class="reset-password-page">
    <div class="reset-password-container">
        <h1 class="reset-password-title">@ViewData["Title"]</h1>
        <h5 class="text-center mb-4">Reset your password</h5>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <!-- Campo de Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Campo de Nova Senha -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password" class="form-label">New Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Campo de Confirmação de Senha -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Botão de Redefinir Senha -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset</button>
        </form>

        <!-- Link para login -->
        <div class="additional-links">
            <p>Já tem uma conta? <a asp-page="./Login">Faça login</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
