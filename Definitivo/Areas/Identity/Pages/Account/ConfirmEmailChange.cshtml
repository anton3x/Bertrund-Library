@page
@model ConfirmEmailChangeModel

@{
    ViewData["Title"] = "Confirmar alteração de email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="status-message">
                            @if (Model.StatusMessage.StartsWith("Error:"))
                            {
                                <p class="text-danger h5">
                                    <i class="bi bi-exclamation-triangle"></i> @Model.StatusMessage.Substring(6)
                                </p>
                            }
                            else
                            {
                                <p class="text-success h5">
                                    <i class="bi bi-check-circle"></i> @Model.StatusMessage
                                </p>
                            }
                        </div>
                    }

                    <div class="mt-4">
                        <a href="/Home/Index" class="btn btn-primary btn-lg">Voltar à página inicial</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
