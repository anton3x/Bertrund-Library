@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Verificação do código de recuperação";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-check text-primary" style="font-size: 2.5rem;"></i>
                        <h2 class="mt-3">@ViewData["Title"]</h2>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <div class="d-flex">
                            <i class="bi bi-info-circle-fill me-2 mt-1"></i>
                            <p class="mb-0">
                                Solicitou iniciar sessão com um código de recuperação. Esta sessão não será memorizada
                                até fornecer um código da aplicação de autenticação ou desativar a autenticação 2FA
                                e iniciar sessão novamente.
                            </p>
                        </div>
                    </div>

                    <form method="post" class="mt-4">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.RecoveryCode"
                                   class="form-control form-control-lg"
                                   autocomplete="off"
                                   placeholder="Código de Recuperação"
                                   style="letter-spacing: 2px; font-family: monospace;" />
                            <label asp-for="Input.RecoveryCode">Código de Recuperação</label>
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Iniciar Sessão
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
