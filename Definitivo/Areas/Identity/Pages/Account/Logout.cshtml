@page
@model LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center" style="height: 60vh;">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">@ViewData["Title"]</h2>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <p class="lead mb-4">Tem certeza que deseja sair?</p>
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-box-arrow-left me-2"></i>Confirmar Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle me-2"></i>Você saiu com sucesso da aplicação.
                        </div>
                        <a href="@Url.Page("/Index")" class="btn btn-primary mt-3">
                            <i class="bi bi-house me-2"></i>Voltar para a Página Inicial
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
