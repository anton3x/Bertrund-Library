@model Definitivo.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card px-2 py-2">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <h4 class="mb-3">Informações da Categoria</h4>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check form-switch">
                            <input asp-for="Estado" class="form-check-input" />
                            <label asp-for="Estado" class="form-check-label">Ativa</label>
                        </div>

                        <div class="mt-4 text-end">
                            <a asp-action="GerirCategorias" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i>
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
