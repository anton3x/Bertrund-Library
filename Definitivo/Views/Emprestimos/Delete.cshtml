@model Definitivo.Models.Emprestimo

@{
    ViewData["Title"] = "Eliminar Emprestimo";
}

<div class="container mt-4">
    <h1 class="text-danger">Eliminar Emprestimo</h1>
    <h3 class="mt-4">Você tem certeza que deseja eliminar este emprestimo?</h3>
    <div class="alert alert-warning mb-4" role="alert">
        Esta ação não pode ser desfeita!
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detalhes do Emprestimo</h4>
            <hr />
            <dl class="row mb-0">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DataPrevista)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DataPrevista)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DataDevolucao)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DataDevolucao)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Perfil)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Perfil.UserName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Livro)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Livro.Titulo)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BibliotecarioEntregou)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BibliotecarioEntregou.UserName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BibliotecarioRecebeu)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BibliotecarioRecebeu.UserName)
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a asp-action="GerirEmprestimos" class="btn btn-secondary">Voltar à Lista</a>
            </form>
        </div>
    </div>
</div>

