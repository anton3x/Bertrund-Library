@model Definitivo.Models.Perfil

@{
    ViewData["Title"] = "Adicionar Administrador";
}

<div class="container mt-4 mb-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="row">
                    <!-- Dados Pessoais -->
                    <div class="col-md-8">
                        <div class="card rounded-3 p-4 mb-4">
                            <h5 class="border-bottom pb-2 mb-4">Dados Pessoais</h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="UserName" class="form-label fw-bold">Nome de Utilizador</label>
                                    <input asp-for="UserName" class="form-control" placeholder="Digite o nome de utilizador" />
                                    <span asp-validation-for="UserName" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                                    <input asp-for="Email" class="form-control" placeholder="Digite o seu email" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold">Telemóvel</label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Digite o seu número de telemóvel" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Morada" class="form-label fw-bold">Morada</label>
                                    <input asp-for="Morada" class="form-control" placeholder="Digite a sua morada " />
                                    <span asp-validation-for="Morada" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Foto e Permissões -->
                    <div class="col-md-4">
                        <div class="card rounded-3 p-4 mb-4">
                            <h5 class="border-bottom pb-2 mb-4">Foto de Perfil</h5>

                            <input hidden asp-for="FotoNome" />

                            <div class="mb-4">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="mb-3" id="previewContainer">
                                        <img src="/images/users/userDefault.png" id="fotoPreview"
                                                class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                                        <input type="file" id="FotoUpload" name="FotoUpload" accept="image/*" class="d-none" onchange="previewImage(event)" />
                                        <label for="FotoUpload" class="btn btn-sm btn-primary rounded-circle" style="width: 32px; height: 32px;">
                                            <i class="bi bi-upload"></i>
                                        </label>
                                    </div>

                                    <p class="text-muted mt-2">Formato: JPG, PNG. Tamanho máximo: 10MB</p>
                                    <span asp-validation-for="FotoNome" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <!-- Botões -->
                <div class="text-end mt-4">
                    <a asp-action="GerirUtilizadores" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left"></i>
                        Voltar
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-lg"></i>
                        Adicionar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById('FotoUpload').addEventListener('change', function (e) {
            const preview = document.getElementById('fotoPreview');
            const file = e.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}
