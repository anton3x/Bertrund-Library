    <style>
        .main-container {
            padding: 20px;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Ensure the main content grows and takes up space */
        .main-content {
            flex-grow: 1;
        }

        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .book-item {
            text-align: center;
        }

        .book-item img {
            width: 150px;
            height: auto;
        }

        footer {
            margin-top: 20px;
            padding: 20px;
            background-color: var(--bs-body-bg);
        }

        header {
            background-color: var(--bs-body-bg);
        }

        /* Estilos para os links de navegação */
        .nav-link {
            transition: all 0.2s ease-in-out;
            border-radius: 6px;
        }

        .nav-link:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

        /* Estilos para o dropdown */
        .dropdown-menu {
            border: none;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            min-width: 200px;
        }

        .dropdown-item {
            transition: all 0.2s ease-in-out;
        }

        .dropdown-item:hover {
            background-color: rgba(0, 0, 0, 0.05);
            padding-left: 1.5rem;
        }

        /* Animação suave para o hover */
        .hover-effect {
            position: relative;
            overflow: hidden;
        }

        .hover-effect::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background-color: var(--bs-primary);
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }

        .hover-effect:hover::after {
            width: 100%;
        }

        .language-selector {
            margin-left: 15px;
        }

        .language-selector .btn {
            padding: 6px 12px;
            display: flex;
            align-items: center;
            gap: 8px;
            border: 1px solid #dee2e6;
        }

        .flag-icon {
            width: 20px;
            height: 20px;
            object-fit: cover;
        }

        .dropdown-menu {
            min-width: 160px;
            padding: 8px 0;
        }

        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
        }

        .dropdown-item:hover {
            background-color: #f8f9fa;
        }

        .language-code {
            font-size: 14px;
            font-weight: 500;
        }

        .offcanvas {
            max-width: 320px;
        }

        .nav-link:focus {
            background-color: var(--bs-gray-100);
            transform: translateX(4px);
        }

        .nav-section-title {
            font-size: 0.75rem;
            letter-spacing: 0.5px;
        }

        .nav-section-items {
            margin-left: -0.5rem;
        }

        .fs-5 {
            font-size: 1.1rem !important;
        }
        /* Estilo para inputs */
        .form-control {
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
            border: 1px solid var(--bs-border-color);
        }

            /* Estilo quando o input está em foco */
            .form-control:focus {
                background-color: var(--bs-tertiary-bg);
                color: var(--bs-body-color);
                border-color: var(--bs-primary);
                box-shadow: 0 0 0 0.25rem rgba(var(--bs-primary-rgb), 0.25);
            }

            /* Estilo para o placeholder */
            .form-control::placeholder {
                color: var(--bs-secondary-color);
                opacity: 0.7;
            }

        /* Ajuste específico para modo escuro */
        [data-bs-theme="dark"] .form-control {
            background-color: var(--bs-tertiary-bg);
            border-color: var(--bs-border-color-translucent);
        }

        [data-bs-theme="dark"] #current-language-button {
            background-color: var(--bs-tertiary-bg);
            border-color: var(--bs-border-color-translucent);
            color: white;
        }

        [data-bs-theme="light"] #current-language-button {
            background-color: var(--bs-body-bg);
            border: 1px solid var(--bs-border-color);
            color: black;
        }

        .form-select {
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
            border: 1px solid var(--bs-border-color);
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            .form-select:focus {
                border-color: var(--bs-primary);
                box-shadow: 0 0 0 0.25rem rgba(var(--bs-primary-rgb), 0.25);
            }

        /* Estilo para as opções do select */
        .form-select option {
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
        }

        [data-bs-theme="light"] .bg-body {
            background-color: var(--bs-light) !important;
        }

        [data-bs-theme="dark"] .bg-body {
