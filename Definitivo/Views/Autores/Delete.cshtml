@model Definitivo.Models.Autor

@{
    ViewData["Title"] = "Eliminar Autor";
}


<div class="container mt-4">
    <h1 class="text-danger">Eliminar Autor</h1>
    <h3 class="mt-4">Você tem certeza que deseja eliminar este Autor?</h3>
    <div class="alert alert-warning mb-4" role="alert">
        Esta ação não pode ser desfeita!
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detalhes da Categoria</h4>
            <hr />
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Biografia)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Biografia)</dd>
                <dt class="col-sm-3">Foto</dt>
                <dd class="col-sm-9"><img src="@Url.Content("~/Images/Autores/" + @Model.FotoNome)" alt="@Model.FotoNome" height="75" /></dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a asp-action="GerirAutores" class="btn btn-secondary">Voltar à Lista</a>
            </form>
        </div>
    </div>
</div>

