@model Definitivo.Models.Livro

@{
    ViewData["Title"] = "Eliminar Livro";
}

<div class="container mt-4">
    <h1 class="text-danger">Eliminar Livro</h1>
    <h3 class="mt-4">Você tem certeza que deseja eliminar este Livro?</h3>
    <div class="alert alert-warning mb-4" role="alert">
        Esta ação não pode ser desfeita!
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detalhes do Livro</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Autor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Autor.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ISBN)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ISBN)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Categoria.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Biblioteca)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Biblioteca.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumeroExemplaresDisponiveis)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumeroExemplaresDisponiveis)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumeroExemplaresTotal)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumeroExemplaresTotal)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Idioma)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Idioma)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumeroPaginas)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumeroPaginas)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Dimensoes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Dimensoes)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FotoNome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FotoNome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BibliotecarioInseriu)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BibliotecarioInseriu.UserName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataInsercao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataInsercao)
                </dd>
                <dt class="col-sm-2">
                    Foto
                </dt>
                <dd class="col-sm-10">
                    <img src="@Url.Content("~/Images/Livros/" + @Model.FotoNome)" alt="@Model.Titulo" height="75" />
                </dd>

            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="GerirLivros">Back to List</a>
            </form>
        </div>
    </div>
</div>
